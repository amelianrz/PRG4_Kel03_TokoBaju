@model List<PRG4_Kel03_TokoBaju.Models.BajuModel>
@{
    ViewData["Title"] = "Master Baju";
    int no = 1;
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Master Baju</h5>
                    <hr />
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="row">
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle me-1"></i>
                                <strong>Sukses!</strong>@TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-s-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    }
                    <a class="btn btn-primary" asp-action="Create">Tambah Baju</a>

                    <!-- Default Table -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Nama Baju</th>
                                <th scope="col">Jenis Baju</th>
                                <th scope="col">Harga</th>
                                <th scope="col">Ukuran</th>
                                <th scope="col">Stok</th>
                                <th scope="col">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bajumodel in Model)
                            {
                                <tr>
                                    <td>@(no++)</td>
                                    <td>@bajumodel.id</td>
                                    <td>@bajumodel.nama</td>
                                    <td>@bajumodel.umur</td>
                                    <td>@bajumodel.alamat</td>
                                    <td>@bajumodel.telp</td>
                                    <td>
                                        <button class="btn btn-sm btn-danger delete-button" data-id="@bajumodel.id">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                        <a asp-controller="Anggota" asp-action="Edit" asp-route-id="@bajumodel.id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn btn-sm btn-info btn-info-modal" data-toggle="modal" data-target="#infoModal_@bajumodel.id">
                                            <i class="fas fa-info-circle"></i>
                                        </button>

                                        <div class="modal fade" id="infoModal_@bajumodel.id" tabindex="-1" role="dialog" aria-labelledby="infoModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Informasi Buku</h5>
                                                        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <strong>Id:</strong>@bajumodel.id<br>
                                                        <strong>Nama:</strong>@bajumodel.nama<br>
                                                        <strong>Jenis Baju:</strong>@bajumodel.idjenis<br>
                                                        <strong>Harga:</strong>@bajumodel.harga<br>
                                                        <strong>Ukuran:</strong>@bajumodel.ukuran<br>
                                                        <strong>Stok:</strong>@bajumodel.stok<br>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Default Table Example -->
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $(".delete-button").click(function () {
            var bukuId = $(this).data("id");
            swal({
                title: "Hapus Baju?",
                text: "Apakah Anda yakin ingin menghapus Baju ini?",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            }).then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        url: "/Baju/Delete/" + bukuId,
                        type: "POST",
                        success: function (data) {
                            if (data.success) {
                                swal("Sukses!", data.message, "success");
                                location.reload();
                            } else {
                                swal("Gagal!", data.message, "error");
                            }
                        },
                        error: function () {
                            swal("Error!", "Terjadi kesalahan saat menghapus anggota.", "error");
                        }
                    });
                }
            });
        });
    });
</script>
