@model PRG4_Kel03_TokoBaju.Models.BajuModel
@{
    ViewData["Title"] = "Tambah Baju";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Tambah Baju</h5>
                    </div>
                    <div class="card-body">
                        <!-- Vertical Form -->
                        <form method="post">
                            <div class="form-group">
                                <label asp-for="id" class="control-label">ID</label>
                                <input asp-for="id" class="form-control" />
                                <span asp-validation-for="id" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="nama" class="control-label">Nama</label>
                                <input asp-for="nama" class="form-control" />
                                <span asp-validation-for="nama" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="idjenis" class="control-label">ID Jenis</label>
                                <input asp-for="idjenis" class="form-control" />
                                <span asp-validation-for="idjenis" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="harga" class="control-label">Harga</label>
                                <input asp-for="harga" class="form-control" />
                                <span asp-validation-for="harga" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ukuran" class="control-label">Ukuran</label>
                                <input asp-for="ukuran" class="form-control" />
                                <span asp-validation-for="ukuran" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="stok" class="control-label">Stok</label>
                                <input asp-for="stok" class="form-control" />
                                <span asp-validation-for="stok" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <button type="reset" class="btn btn-secondary">Reset</button>
                            </div>
                        </form><!-- Vertical Form -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
