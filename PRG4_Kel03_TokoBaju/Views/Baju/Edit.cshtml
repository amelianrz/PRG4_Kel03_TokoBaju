@model PRG4_Kel03_TokoBaju.Models.BajuModel
@{
    ViewData["Title"] = "Edit Baju";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Edit Baju</h5>
                    </div>
                    <div class="card-body">
                        <!-- Vertical Form -->
                        <form method="post" asp-controller="Buku" asp-action="Edit">
                            <input type="hidden" asp-for="id" />
                            <div class="col-12">
                                <label asp-for="id" class="control-label">ID Baju</label>
                                <input asp-for="id" class="form-control">
