                            </div>
                            <div class="col-12">
                                <label asp-for="nama" class="control-label">Nama Baju</label>
                                <input asp-for="nama" class="form-control">
                                <span asp-validation-for="nama" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="idjenis" class="control-label">Jenis Baju</label>
                                <input asp-for="idjenis" class="form-control">
                                <span asp-validation-for="idjenis" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="harga" class="control-label">Harga</label>
                                <input asp-for="harga" class="form-control">
                                <span asp-validation-for="harga" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="ukuran" class="control-label">Ukuran Baju</label>
                                <input asp-for="ukuran" class="form-control">
                                <span asp-validation-for="harga" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="stok" class="control-label">Stok Baju</label>
                                <input asp-for="stok" class="form-control"><a href="C:\Folder Git\PRG4_Kel03_TokoBaju\PRG4_Kel03_TokoBaju\Views\Baju/Edit.cshtml"</a>
                                <span asp-validation-for="stok" class="text-danger"></span>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Simpan</button>
                                <button type="reset" class="btn btn_primary">Batal</button>

                            </div>
                        </form><!-- Vertical Form -->

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
